@import '~@theme/styles/hermit.styl' 
html
  line-height 1.6
  letter-spacing .06em
  background-color $accentColor

button
input
optgroup
select
textarea
  font-size 100%
  font-family inherit
  line-height 1.15
  margin 0

body
button
input
select
textarea
  color $keyColor
  font-family trebuchet ms,Verdana,verdana ref,segoe ui,Candara,lucida grande,lucida sans unicode,lucida sans,Tahoma,sans-serif

body
  margin 0

::-webkit-scrollbar
  width 0
  height 8px
  background $scrollColor
  &-thumb
    background $scrollThumbColor

h1
  font-size 2em
  margin .67em 0

a
  color $keyColor
  text-decoration none
  border none
  transition-property color
  transition-duration .4s
  transition-timing-function ease-out
  background-color transparent
  &:hover
    color $hoverColor
    text-shadow 0 0 1px $hoverColor

.spotlight
  display flex
  min-height 100vh
  flex-direction column
  align-items center
  justify-content center
  max-width 93%
  margin auto
  font-size 1.5em

.section-inner
  margin 0 auto
  max-width 1200px
  width 93%

.thin
  max-width 720px
  margin auto